<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="572.5dp"
        android:layout_height="624.0dp"
        android:id="@+id/linearLayout1"
        android:gravity="center|bottom|fill">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="335.0dp"
            android:id="@+id/linearLayout3"
            android:layout_marginBottom="0.0dp"
            android:gravity="center|bottom"
            android:layout_marginTop="0.0dp">
            <TextView
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="140.0dp"
                android:id="@+id/textView3"
                android:layout_gravity="right|top"
                android:foregroundGravity="right|left" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout5" />
            <TextView
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="72.0dp"
                android:id="@+id/textView1"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layout_marginTop="0.5dp"
                android:hyphenationFrequency="none"
                android:textDirection="locale"
                android:textStyle="normal"
                android:textSize="30dp" />
            <Button
                android:text="开门"
                android:layout_width="315.5dp"
                android:layout_height="93.0dp"
                android:id="@+id/button1"
                android:textSize="30dp"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="177.0dp"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="33.0dp"
            android:gravity="top">
   
            <TextView
                android:text="服务器未连接..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>